@import url('http://static.ecgci.com/css/libs/reset.css');
@import url('http://static.ecgci.com/css/libs/limitPage.css');
@import url('http://static.ecgci.com/css/libs/header.css');
@import url('../plugin/menu.css');

.c {
    clear: both;
}
.w {
    width: 1240px;
    margin: 0 auto;
}
.right_a {
    width: 1003px;
}
.text_c {
    text-align: center;
    word-break: break-all;
}
.tr_left {
    text-align: left;
}
table.text_c td.tr_left {
    vertical-align: top;
    line-height: 20px;
}
table.text_c td.font_02 a {
    color: #000;
}
table.text_c td.font_02 a:hover {
    color: #e43a3d;
}
table, table th, table td {
    border: #e1e1e1 1px solid;
    line-height: 24px;
    border-collapse: collapse;
    color: #000;
    font-size: 12px;
}
table th {
    background: #f3f3f3;
    text-align: center;
}
table th, table td {
    padding: 5px 10px;
}
h2 {
    height: 28px;
    line-height: 28px;
    color: #58595b;
    border: none;
    padding: 0 0 5px;
    font-size: 14px;
    font-weight: bold;
}
th {
    border: none;
}
h1, h2, h3 {
    font-weight: normal;
}
.crumbs {
    height: 52px;
    line-height: 52px;
    color: #58595b;
    font-family: "Microsoft YaHei";
    overflow: hidden;
}
.crumbs span {
    padding: 0 6px;
}
.m_right h2 {
    height: 30px;
    font-weight: bold;
    padding: 2px 10px;
    border-bottom: #e1e1e1 0px solid;
    font-size: 14px;
    line-height: 30px;
    color: #58595b;
    font-family: "SimSun";
    text-align: left;
    background-color: #f7f7f7;
}
.m_right h2.wdbord, h2.wdbord {
    border-bottom: none;
}
.item-reply .reply-list .reply-meta .p-bfc .tbwid {
    margin: 0 auto;
}
.m_right td h2 {
    padding: 2px 0;
}
h6 {
    padding: 0 10px;
    background: #f3f3f3;
    font-size: 14px;
    height: 30px;
    line-height: 30px;
    border-bottom: #e1e1e1 1px solid;
    margin: 0;
}
em {
    font-style: normal;
}
td, td {
    padding: 10px 20px;
    border: 1px solid #ccc;
    font-weight: normal;
}
a {
    text-decoration: none;
}
a:hover {
    text-decoration: underline
}
table.formtable tr.#viewAddress1 td {
    vertical-align: top
}
.crumbs a:hover {
    color: #c42605;
}
body {
    color: #666666;
    background: #ffffff;
}
a {
    color: #666666;
}
a:hover {
    color: #e43a3d;
}
