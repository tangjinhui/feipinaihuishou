@import url('http://static.ecgci.com/css/libs/reset.css');
@import url('http://static.ecgci.com/css/libs/dialog.css');
@import url('http://static.ecgci.com/css/libs/header.css');
@import url('../../plugin/menu.css');
.w {
    width: 1240px;
    margin: 0 auto;
}

.left_a {
    width: 218px;
    border: #ccc 1px solid;
    border-right: 1px solid #dedede;
    border-bottom: #999999 3px solid;
    filter: progid:DXImageTransform.Microsoft.Shadow(color='#c9c9c9', Direction=135, Strength=5);
    background-color: #fff;
    -moz-box-shadow: 2px 2px 5px #c9c9c9;
    -webkit-box-shadow: 2px 2px 5px #c9c9c9;
    box-shadow: 2px 2px 5px #c9c9c9;
}

.right_a {
    width: 1003px;
}

.mart15 {
    margin-top: 13px;
}

.marl10 {
    margin-left: 10px;
}

.marl20 {
    margin-left: 20px;
}

.marr10 {
    margin-right: 10px;
}

.padr10 {
    padding-right: 10px;
}

.padb10 {
    padding-bottom: 10px;
}

.text_r {
    text-align: right;
}

table, table td {
    border: #e1e1e1 1px solid;
    line-height: 24px;
    border-collapse: collapse
}

table td {
    padding: 5px 10px;
}

.bord {
    border: #e1e1e1 1px solid;
}

h2 {
    height: 28px;
    line-height: 28px;
    color: #58595b;
    border: none;
    padding: 0 0 5px;
    font-size: 14px;
    font-weight: bold;
}

.formError {
    position: absolute;
    top: 300px;
    left: 300px;
    display: block;
    z-index: 900;
    cursor: pointer;
}

.formError .formErrorContent {
    position: relative;
    z-index: 901;
    height: 29px;
    line-height: 29px;
    width: auto;
    color: #e43a3d;
    font-family: 'SimSun';
    font-size: 12px;
    border: 1px solid #e43a3d;
    padding: 0 10px 0 25px;
    background: url(http://static.ecgci.com/images/icon.png) -180px -145px no-repeat;
}

table.formtable {
    margin: 40px 0;
}

table.formtable, table.formtable td, table.formtable, th {
    border: none;
}

table.formtable td {
    line-height: 30px;
    padding: 5px;
}

table.formtable td textarea {
    overflow-y: auto;
    height: 66px;
    width: 302px;
    vertical-align: top;
    padding: 5px;
    font-size: 12px;
    color: #666
}

table.formtable td textarea.hei100 {
    height: 100px;
    width: 400px;
}

h1, h2, h3 {
    font-weight: normal;
}

.btn {
    padding: 2px 8px;
    display: inline-block;
    border: none;
    font-size: 12px;
    vertical-align: middle;
    text-align: center;
    color: #fff;
    font-family: "Microsoft YaHei";
    line-height: 22px;
    cursor: pointer;
    margin-right: 10px;
}

.crumbs {
    height: 52px;
    line-height: 52px;
    color: #58595b;
    font-family: "Microsoft YaHei";
    overflow: hidden;
}

.crumbs span {
    padding: 0 6px;
}

.crumbs .tit {
    padding: 0;
    font-size: 14px;
    font-weight: bold;
}

.m_left h2, .m_left h3 {
    font-size: 14px;
    color: #fff;
    font-weight: bold;
    font-family: "Microsoft YaHei";
    text-align: left;
}

.m_left h2 {
    padding: 0 0 0 13px;
}

.m_left h2 {
    height: 44px;
    background: url(http://static.ecgci.com/images/hy_topbg.png) 0 0 repeat-x;
    line-height: 44px;
    color: #333;
    font-size: 18px;
    font-weight: normal;
}

.m_left h2.hycent {
    background: url(http://static.ecgci.com/images/people_bg.png) 0 0 repeat-x;
    font-size: 0;
}

.m_left h3 {
    height: 35px;
    margin: 0;
    padding: 9px 0 0 29px;
    background: #fff;
    border-bottom: 1px dashed #e1e1e1;
    line-height: 35px;
    color: #58595b;
    font-family: Microsoft YaHei;
    font-size: 14px;
}

.m_left ul {
    padding: 5px 0;
}

.m_left li {
    padding: 0 0 0 30px;
    font-family: Microsoft YaHei;
    color: #58595b;
    line-height: 24px;
    font-size: 12px;
}

.m_right h2 {
    height: 30px;
    font-weight: bold;
    padding: 2px 10px;
    border-bottom: #e1e1e1 0px solid;
    font-size: 14px;
    line-height: 30px;
    color: #58595b;
    font-family: "SimSun";
    text-align: left;
    background-color: #f7f7f7;
}

#ckts table, #ckts table td {
    border-left: none;
    border-right: none;
}

#ckts table td {
    height: 28px;
    line-height: 28px;
    padding: 2px 10px;
}

#hfxx {
    border-left: #e1e1e1 1px solid;
    border-right: #e1e1e1 1px solid;
}

#hfxx table, #hfxx table td {
    border: none;
}

#hfxx table td {
    height: 28px;
    line-height: 28px;
    padding: 0 20px;
}

#hfxx table td span {
    font-weight: bold;
}

#hfxx table td.hui {
    color: #58595b;
    text-align: right;
}
#hfxx table td.huifu{
    background-color:#eee;
}

.m_right h2.wdbord, h2.wdbord {
    border-bottom: none;
}

td span.red, .red {
    color: #e43a3d;
}

.item-reply .reply-list .reply-meta .p-bfc .tbwid {
    margin: 0 auto;
}

h6 {
    padding: 0 10px;
    background: #f3f3f3;
    font-size: 14px;
    height: 30px;
    line-height: 30px;
    border-bottom: #e1e1e1 1px solid;
    margin: 0;
}

em {
    font-style: normal;
}

td, td {
    padding: 10px 20px;
    border: 1px solid #ccc;
    font-weight: normal;
}

.crumbs a:hover {
    color: #c42605;
}

a {
    color: #666666;
}

a:hover {
    color: #e43a3d;
}

span.red {
    color: #e43a3d
}

.btn {
    background: #e43a3d;
    color: #ffffff
}

.btn {
    background: #e43a3d;
}
